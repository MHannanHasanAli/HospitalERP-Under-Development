@model EditRoleViewModel


<h1>Edit Role</h1>

<form method="post">
    <div class="form-group">
        <input asp-for="Id" class="form-control" hidden />
    </div>
    <div class="form-group">
        <label asp-for="RoleName">Role</label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-danger"
       asp-controller="Role" asp-action="Index">
        Cancel
    </a>
</form>
<br />
<br />
<div class="card">
    <div class="card-header">
        <h2>Users In This Role</h2>
    </div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            <table class=" table table table-responsive">
                <thead>
                <th><h3>Name</h3></th>
                <th><h3>Email</h3></th>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                        </tr>
                    }
                </tbody>
            </table>          
        }
        else
        {
            <h5>No user exist in this role.</h5>
        }
        <br />
@*         <a asp-action="EditUsersInRole" asp-controller="Role" asp-route-roleId="@Model.Id" class="btn btn-primary">Add/Remove Users</a>@*
        <a href="#" class="btn btn-danger">Remove Users</a> *@
    </div>
</div>