                    </a>
                </li>
                <li class="list rooms">
                    <b></b>
                    <b></b>
                    <a href="~/Room/Index">
                        <span class="icon"><ion-icon name="bed-outline"></ion-icon></span>
                        <span class="title">Rooms</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="~/Patient/Index">
                        <span class="icon"><ion-icon name="person"></ion-icon></span>
                        <span class="title">Patients</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="~/Doctor/Index">
                        <span class="icon"><ion-icon name="person"></ion-icon></span>
                        <span class="title">Doctors</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="~/Supplier/Index">
                        <span class="icon"><ion-icon name="person"></ion-icon></span>
                        <span class="title">Suppliers</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="~/LabStaff/Index">
                        <span class="icon"><ion-icon name="person"></ion-icon></span>
                        <span class="title">Lab Staff</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="~/Pharmacist/Index">
                        <span class="icon"><ion-icon name="person"></ion-icon></span>
                        <span class="title">Pharmacist</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="~/Management/Index">
                        <span class="icon"><ion-icon name="person"></ion-icon></span>
                        <span class="title">Management</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="~/Security/Index">
                        <span class="icon"><ion-icon name="person"></ion-icon></span>
                        <span class="title">Management</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="~/Cleaning/Index">
                        <span class="icon"><ion-icon name="person"></ion-icon></span>
                        <span class="title">Cleaning</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="~/Maintenance/Index">
                        <span class="icon"><ion-icon name="person"></ion-icon></span>
                        <span class="title">Maintenance</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="#">
                        <span class="icon"><ion-icon name="people-outline"></ion-icon></span>
                        <span class="title">Users</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="#">
                        <span class="icon"><ion-icon name="settings-outline"></ion-icon></span>
                        <span class="title">Setting</span>
                    </a>
                </li>
                <li class="list">
                    <b></b>
                    <b></b>
                    <a href="#">
                        <span class="icon"><ion-icon name="log-out-outline"></ion-icon></span>
                        <span class="title">Sign Out</span>
                    </a>
                </li>
            </ul>
        </div>

           <div class="main-content">
                @RenderBody()
           </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/SideBar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {

            // Toggle menu
            $('.toggle').click(function () {

                $('.toggle, .navigation, .logo-img, .main-list, .main-content').toggleClass('Active');

                var navigationClasses = $('.navigation').attr('class');

                $.ajax({
                    url: '/Shared/StoreNavigationClasses',
                    method: 'POST',
                    data: { navigationClasses: navigationClasses },
                    success: function (response) {

                    },
                    error: function (error) {
                        console.error('Error storing class names:', error);
                    }
                });


            });

            var data = "@context.HttpContext.Session.GetString("nav-bar")";

            if (data === "rooms") {
                $('.list').removeClass('Active');
                $('.rooms').addClass('Active');
            }
            else if (data === "hospital") {
                $('.list').removeClass('Active');
                $('.hospitals').addClass('Active');
            }

            var barWidth = "@context.HttpContext.Session.GetString("bar-situation")";

            if (barWidth === "navigation Active") {
                $('.toggle, .navigation, .logo-img, .main-list, .main-content').addClass('Active');
            }
            else {
                $('.toggle, .navigation, .logo-img, .main-list, .main-content').removeClass('Active');
            }
        });
       
    </script>
</body>

</html>
