@model HospitalERP.ViewModels.RoomActionViewModel


@if (Model.View != -1)
{
    if (Model.Id != 0)
    {
        <h1 class="page-title">Edit Room</h1>
    }
    else
    {
        <h1 class="page-title">New Room</h1>
    }
}
else
{
    <h1 class="page-title">Room Details</h1>
}

<hr />


<form asp-action="Action">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group" hidden>
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <br />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Hospital" class="control-label"></label>
                <select asp-for="HospitalId" asp-items="@(new SelectList(Model.Hospitals, "Id", "Name"))" class="form-control">
                    @*  <option value="">Select Hospital</option> *@
                </select>
                <span asp-validation-for="HospitalId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="Semi-Private">Semi-Private</option>
                    <option value="Private">Private</option>
                    <option value="VIP">VIP</option>
                    <option value="Intensive Care">Intensive Care</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>


            </div>
        </div>
        <br />
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Occupied">Occupied</option>
                    <option value="Vacant">Vacant</option>
                    <option value="Under Maintenance">Under Maintenance</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
       
    </div>
    <br />
    <div class="botton-section" style="float:right;">
        <a asp-action="Index" class="btn btn-danger MediumBtn">Back</a>
        @if (Model.View != -1)
        {
            @if (Model.Id != 0)
            {
                <input type="submit" value="Save" class="btn btn-primary MediumBtn" />
            }
            else
            {
                <input type="submit" value="Add" class="btn btn-primary MediumBtn" />
            }
        }
        else
        {

        }
    </div>
</form>



<script>
    $(document).ready(function () {
        // Check if @Model.View == -1
        if (@Model.View == -1) {
            // Disable all input boxes
            $('input').prop('disabled', true);
            $('select').prop('disabled', true);
        }
    });
</script>
